{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "../dist/",
    "module": "esnext",
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017",
      "dom",
      "dom.iterable"
    ],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": false,
    "typeRoots": [
      "../typings",
      "../node_modules/@types"
  ]
  },
  "include": [
    "src/**/*",
    ".storybook/**/*", "index.ts",
    "index.d.ts", 
  ],
  "exclude": [
    "node_modules",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}
